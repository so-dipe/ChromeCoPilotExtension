{
    "manifest_version": 3,
    "name": "Chrome CoPilot",
    "version": "0.0.3",
    "description": "A Chrome extension that helps you navigate the web",
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "http://localhost:8000/*",
        "https://chromecopilot-66au4vtdba-uc.a.run.app/*"
    ],
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "cookies",
        "sidePanel",
        "storage",
        "tabs"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    }
}